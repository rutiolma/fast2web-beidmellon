/**
 * Implements hook_field_info().
 */
function fedict_fedid_field_info() {
  return array(
    'fedict_fedid' => array(
      'label' => t('FedID'),
      'description' => t('A Belgian FedID (one-way encrypted)'),
      'default_widget' => 'fedict_fedid',
      'default_formatter' => 'fedict_fedid_formatter',
    ),
  );
}

/**
 * Implements hook_field_formatter_info().
 */
function fedict_fedid_field_formatter_info() {
  return array(
    'fedict_fedid_formatter' => array(
      'label'       => t('Belgian FedID field formatter'),
      'field types' => array('fedict_fedid'),
    ),
  );
}

/**
 * Implements hook_field_formatter_view().
 */
function fedict_fedid_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();

  switch ($display['type']) {
    case 'fedict_fedid_formatter':
      foreach ($items as $delta => $item) {
        if (!empty($item['fedict_fedid'])) {
          $fed_id_out = '••••••••••••••••';
          $element[$delta]['#markup'] = '<span>' . $fed_id_out . '</span>';
        }
      }
      break;
  }
  return $element;
}

/**
 * Implements hook_field_widget_form().
 */
function fedict_fedid_field_widget_form(&$form, &$form_state, $field, $instance, $langcode, $items, $delta, $element) {
  if ($instance['widget']['type'] === 'fedict_fedid') {
    $dsc_key     = '#description';
    $default_dsc = t('Belgian FedID will remain unchanged if left blank.');
    $description = (empty($element[$dsc_key])) ? $default_dsc : $element[$dsc_key];
    $weight      = (isset($element['#weight'])) ? $element['#weight'] : 0;

    // Set up title.
    $fed_id_field = field_get_items($element['#entity_type'], $element['#entity'], $element['#field_name']);
    if (isset($fed_id_field[$delta]['fedict_fedid'])) {
      $title = filter_xss($element['#title']) . t(' (Already defined. Will remain unchanged if left blank.)');
    }
    else {
      $title = filter_xss($element['#title']);
    }

    // Set up default value.
    $field_name = $field['field_name'];
    $field_type = $field['type'];
    $default_fed_id_ = $instance['default_value'][0][$field_type][$field_type];

    $element['fedict_fedid'] = array(
      '#type'             => 'textfield',
      '#title'            => $title,
      '#description'      => filter_xss($description),
      '#maxlength'        => 40,
      '#default_value'    => $default_fed_id_,
      '#required'         => $element['#required'],
      '#weight'           => $weight,
      '#delta'            => $delta,
      '#element_validate' => array('_fedict_fedid_validate'),
    );
  }
  return $element;
}

/**
 * Implements hook_field_widget_error().
 */
function fedict_fedid_widget_error($element, $error, $form, &$form_state) {
  switch ($error['error']) {
    case 'fedict_fedid_invalid':
      form_error($element, $error['message']);
      break;
  }
}

/**
 * Implements hook_field_is_empty().
 */
function fedict_fedid_field_is_empty($item, $field) {
  if (empty($item['fedict_fedid'])) {
    return TRUE;
  }
}

