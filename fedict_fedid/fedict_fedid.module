/**
 * Gets field instance details.
 *
 * Given an element and form state, loads details of the field instance
 * and the entity type it is attached to.
 */
function _fedict_fedid_get_instance_details($element, $form_state) {
  // Parse the element name to determine field name, language, and delta.
  $pattern = '/^([^\[]+)\[([^\[]+)]\[([^\[]+)\]/';
  if (!preg_match($pattern, $element['#name'], $matches)) {
    return;
  }
  list($full_match, $field_name, $langcode, $delta) = $matches;

  // Get the entity type and the entity itself.
  $field_instance = $form_state['field'][$field_name][$langcode]['instance'];
  $entity_type    = $field_instance['entity_type'];

  return array(
    'field_name'  => $field_name,
    'langcode'    => $langcode,
    'delta'       => $delta,
    'entity_type' => $entity_type,
  );
}

/**
 * Loads field value.
 *
 * Given an element and form state, load the current value of the field
 * instance.
 */
function _fedict_fedid_load_current_value($element, $form_state) {
  // Get field details.
  $field_details = _fedict_fedid_get_instance_details($element, $form_state);
  $entity_type   = $field_details['entity_type'];

  // If there is no entity, then there can't be a value.
  if (empty($form_state[$entity_type])) {
    return;
  }

  $entity        = $form_state[$entity_type];
  $field_name    = $field_details['field_name'];
  $delta         = $field_details['delta'];

  // Load the field instance from DB and get the value.
  $fed_id_field   = field_get_items($entity_type, $entity, $field_name);
  $fed_id_value   = (isset($fed_id_field[$delta]['fedict_fedid']))
                     ? $fed_id_field[$delta]['fedict_fedid'] : NULL;
  return $fed_id_value;
}

/**
 * Validation callback for FedID field.
 */
function _fedict_fedid_validate($element, &$form_state) {
  // If no value to encrypt, get out of here.
  if (!isset($element['#value'])) {
    return;
  }

  // If FedID value exists, but is empty, load old value and store that. This
  // means that if the field is left blank, then the value will be unchanged.
  if (empty($element['#value']) && !empty($form_state['field'])) {
    $fed_id_value = _fedict_fedid_load_current_value($element, $form_state);
    form_set_value($element, array('fedict_fedid' => $fed_id_value), $form_state);
    return;
  }

  // Validate number, hash it and set it in the form.
  try {
    $fedid = $element['#value'];
    // Check for non allowed characters (ie. not numbers, spaces, dots or dashes)
    $allowed_characters_pattern = "/^[0-9A-z]+$/";

    if (preg_match($allowed_characters_pattern, $fedid) != 1) {
      throw new Exception(t("Non allowed character in FedID."));
    }
    else {
      // Length must be 40 characters.
      if (strlen($fedid) != 40) {
        throw new Exception(t("Length of the FedID is not 40 characters."));
      }
    }
    // If a new FedID value has been entered, hash it before saving.
    $value = _fedict_fedid_hash($fedid);
    form_set_value($element, array('fedict_fedid' => $value), $form_state);

    // If this is a user field, make sure it's unique.
    $field_details = _fedict_fedid_get_instance_details($element, $form_state);
    $entity_type   = $field_details['entity_type'];
    if ($entity_type == 'user') {
      if (!empty($form_state['user']->uid)) {
        $account_uid = $form_state['user']->uid;
      }
      else {
        $account_uid = NULL;
      }
      $query = new EntityFieldQuery;
      $query->entityCondition('entity_type', 'user')
        ->fieldCondition($field_details['field_name'], 'fedict_fedid', $value)
        ->propertyCondition('uid', $account_uid, '!=')
        ->count();
      $count = $query->execute();
      if ($count > 0) {
        form_set_error($field_details['field_name'], 'The submitted FedID is already being used by another account. It is not possible to have more than one account with the same FedID:');
      }
    }
  }
  catch (Exception $e) {
    form_error($element, t('Invalid FedID: ' . $e->getMessage()));
  }


}

/**
 * Hook to be called by other modules to match a user-inputted string against
 * a stored (hashed and salted) number.
 *
 * @param string $input
 *   Plain-text string to compare the hashed string against. Previous validation
 *   through fedict_fedid_validate_and_sanitize() is recommendend.
 * @param string $stored_hash
 *   Hashed string to compare the plain-text string against.
 *
 * @return bool
 *   TRUE if match, FALSE if no match.
 */
function fedict_fedid_match($fedid, $stored_hash) {
  $PBKDF2_FixedSalt = _fedict_fedid_get_PBKDF2();
  return $PBKDF2_FixedSalt->validate_password($fedid, $stored_hash);
}

/**
 * Hashes the FedID.
 *
 * Uses the same hashing algorithm as Drupal passwords, but uses the
 * $drupal_hash_salt global defined in settings.php in order to generate a peppered
 * version of the FedID.  This way, not only database access but also
 * PHP code access or settings.php access is needed for an attack.
 *
 * @param $fedid string
 *   The plain-text FedID.
 *
 * @return string
 *   The hashed and salted FedID.
 */
function _fedict_fedid_hash($fedid) {
  $PBKDF2_Fixed_Salt = _fedict_fedid_get_PBKDF2();
  return $PBKDF2_Fixed_Salt->create_hash($fedid);
}

/**
 * Helper function which instantiates a PBKDF2_Fixed_Salt class using the
 * $fedict_fedid_salt global.
 *
 * @return object
 *   PBKDF2_Fixed_Salt
 */
function _fedict_fedid_get_PBKDF2() {
  global $fedict_fedid_salt;
  $PBKDF2_Fixed_Salt = new PBKDF2_Fixed_Salt($fedict_fedid_salt);
  return $PBKDF2_Fixed_Salt;
}
